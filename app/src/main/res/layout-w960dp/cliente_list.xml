<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.example.alumnodesarrollo1.protototipo_punto_de_venta.ClienteListActivity">

    <!--
    This layout is a two-pane layout for the Clientes
    master/detail flow.

    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cliente_list"
        android:name="com.example.alumnodesarrollo1.protototipo_punto_de_venta.ClienteListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.alumnodesarrollo1.protototipo_punto_de_venta.ClienteListActivity"
        tools:listitem="@layout/cliente_list_content" />

    <FrameLayout
        android:id="@+id/cliente_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
